<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Aplica la fuente retro al tema -->

        <item name="android:textColor">@color/retroTextColor</item>
        <item name="android:background">@color/retroBackground</item>
    </style>

    <!-- Estilo retro para Button -->
    <style name="RetroButton" parent="Widget.AppCompat.Button">

        <item name="android:textColor">@color/retroTextColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/retro_button_background</item>
    </style>

    <!-- Estilo retro para AlertDialog -->
    <style name="RetroAlertDialog" parent="Theme.AppCompat.Dialog.Alert">

        <item name="android:textColor">@color/retroTextColor</item>
        <item name="android:background">@color/retroBackground</item>
    </style>

    <style name="RetroAlertDialogGameOver" parent="Theme.AppCompat.Dialog.Alert">

        <item name="android:textColor">@color/retroTextColor</item>
        <item name="android:background">@drawable/retro_alert_dialog_game_over</item>
    </style>

</resources>